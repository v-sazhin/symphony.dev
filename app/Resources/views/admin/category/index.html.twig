{% extends 'base.html.twig' %}

{% block body %}
    <div class="panel panel-default">
        <div class="panel-heading">
            ...
        </div>
        <!-- /.panel-heading -->
        <div class="panel-body">
            <div class="table-responsive">
                <table id="example" class="table table-striped table-bordered table-hover">
                    <thead>
                    <tr>
                        <th>ID</th>
                        <th>Название</th>
                        <th>Редактировать</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for cat in category %}
                        <tr>
                            <td>
                                {{ cat.id }}
                            </td>
                            <td>
                                {{ cat.name }}
                            </td>
                            <td>
                                <a href="{{ path('admin_category_edit', {id: cat.id}) }}">Редактировать</a>
                            </td>

                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
            <!-- /.table-responsive -->
        </div>
        <!-- /.panel-body -->
    </div>
{% endblock %}

{% block title %}Список всех категорий{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('vendor/datatables/js/jquery.dataTables.min.js') }}"></script>
    <script>
        $(document).ready(function () {
            $('#example').DataTable();
        });
    </script>
{% endblock %}

{% block css %}
    {{ parent() }}
    <link href="{{ asset('vendor/datatables/css/jquery.dataTables.min.css') }}" rel="stylesheet" type="text/css">
{% endblock %}