{% extends 'base.html.twig' %}

{% block body %}

    {{ form_start(form) }}
    <div class="form-group">
        {{ form_widget(form) }}
        <br>
        <input type="submit" value="Create" class="btn btn-default btn-block" formnovalidate/>
    </div>
    {{ form_end(form) }}

    <ul>
        <li>
            <a href="{{ path('post_index') }}" >Back to the list</a>
        </li>
    </ul>
{% endblock %}

{% block css %}
    {{ parent() }}
    <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.4/css/select2.min.css" rel="stylesheet"/>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.4/js/select2.min.js"></script>
    <script src="https://cdn.ckeditor.com/ckeditor5/1.0.0-alpha.1/classic/ckeditor.js"></script>

    <script>
        $(document).ready(function() {
            $('#sazhin_blogbundle_post_categories').select2();
            ClassicEditor
                .create( document.querySelector( '#sazhin_blogbundle_post_content' ) )
            ClassicEditor
                .create( document.querySelector( '#sazhin_blogbundle_post_description' ) )
        });
    </script>
{% endblock %}

{% block title %}Добавление записи в блог{% endblock %}